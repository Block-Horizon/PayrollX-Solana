# PayrollX-Solana Environment Configuration
# Copy this file to .env.local and modify as needed

# Database Configuration (for Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=adminpass
POSTGRES_DB=payrollx_main

# Database URLs for each service
DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_main
AUTH_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_auth
ORG_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_org
EMPLOYEE_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_employee
WALLET_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_wallet
PAYROLL_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_payroll
TRANSACTION_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_transaction
NOTIFICATION_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_notification
COMPLIANCE_DATABASE_URL=postgresql://admin:adminpass@localhost:5432/payrollx_compliance

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:adminpass@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=adminpass

# JWT Configuration
JWT_SECRET=super_jwt_key_development_change_in_production
JWT_REFRESH_SECRET=super_jwt_refresh_key_development_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost
CORS_ORIGINS=http://localhost:3100,http://localhost:3000

# Service Ports
AUTH_SERVICE_PORT=3001
ORG_SERVICE_PORT=3002
EMPLOYEE_SERVICE_PORT=3003
WALLET_SERVICE_PORT=3004
PAYROLL_SERVICE_PORT=3005
TRANSACTION_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
COMPLIANCE_SERVICE_PORT=3008

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
ORG_SERVICE_URL=http://localhost:3002
EMPLOYEE_SERVICE_URL=http://localhost:3003
WALLET_SERVICE_URL=http://localhost:3004
PAYROLL_SERVICE_URL=http://localhost:3005
TRANSACTION_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007
COMPLIANCE_SERVICE_URL=http://localhost:3008

# MPC Server
MPC_SERVER_HOST=localhost
MPC_SERVER_PORT=8080
MPC_SERVER_URL=http://localhost:8080
MPC_JWT_SECRET=secret_key_development_change_in_production

# Solana Configuration
SOLANA_RPC_URL=http://localhost:8899
SOLANA_WS_URL=ws://localhost:8900
SOLANA_CLUSTER=devnet

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SOLANA_RPC_URL=http://localhost:8899
NEXT_PUBLIC_CLUSTER=devnet
FRONTEND_PORT=3100

# Logging
LOG_LEVEL=debug
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
