// This is your Prisma schema file for the Wallet service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../dist/prisma/wallet"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id           String   @id @default(uuid())
  employeeId   String
  publicKey    String
  keyShareIds  String[]
  provider     String   @default("MPC")
  createdBy    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("wallets")
}

model Transaction {
  id              String   @id @default(uuid())
  walletId        String
  toAddress       String
  amount          Decimal
  signature       String
  status          String   @default("PENDING")
  transactionHash String?
  blockNumber     String?
  gasUsed         String?
  gasPrice        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("transactions")
}