// This is your Prisma schema file for the Notification service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../dist/prisma/notification"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id           String   @id @default(uuid())
  userId       String
  type         String
  subject      String
  content      String
  status       String   @default("PENDING")
  metadata     Json?
  sentAt       DateTime?
  deliveredAt  DateTime?
  errorMessage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("notifications")
}